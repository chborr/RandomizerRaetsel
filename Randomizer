    <h1  style="font-size:2.9rem; color: #D4C142; text-shadow: 0 0 5px black;">Randomizer - RÃ¤tsel der Zeit</h1>
    <textarea id="nameInput" rows="10" cols="20" placeholder="Namen eingeben, jeweils in einer neuen Zeile..."></textarea><br>
    <button onclick="randomize()">PUSH THE BUTTON!</button>
    <div id="output"></div>

    <script>
        function randomize() {
            const input = document.getElementById('nameInput').value.trim();
            const names = input.split('\n').filter(name => name.trim() !== '');

            if (names.length === 0) {
                document.getElementById('output').innerText = "Bitte Namen eingeben!";
                return;
            }

            const randomIndex = Math.floor(Math.random() * names.length);
            const randomName = names[randomIndex];

            document.getElementById('output').innerText = `${randomName} ist am Zug!`;
        }
    </script>
